<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<LangVersion>Latest</LangVersion>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Authors>The Tech Idea</Authors>
		<Company>The Tech Idea</Company>
		<Copyright>2022</Copyright>
		<PackageProjectUrl>https://github.com/The-Tech-Idea/</PackageProjectUrl>
		<PackageIcon>SimpleODM.png</PackageIcon>
		<RepositoryUrl>https://github.com/The-Tech-Idea/</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Version>1.0.37</Version>

	</PropertyGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Copy SourceFiles="$(TargetDir)$(PackageId).dll" DestinationFolder="$(ProjectDir)..\..\..\outputDLL\DataSources\$(PackageId)\$(TargetFramework)" SkipUnchangedFiles="false" />
	</Target>
	<Target Name="CopyPackage" AfterTargets="Pack">
		<Copy SourceFiles="$(OutputPath)$(PackageId).$(PackageVersion).nupkg" DestinationFolder="..\..\..\..\LocalNugetFiles\DataSources" />
	</Target>
	<ItemGroup>
		<None Include="..\..\..\InstallationScripts\LogoGFx\128\SimpleODM.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
	<ItemGroup>
	  <PackageReference Include="DuckDB.NET.Bindings.Full" Version="0.10.2" />
	  <PackageReference Include="DuckDB.NET.Data.Full" Version="0.10.2" />
	  <PackageReference Include="RDBDataSource" Version="1.0.41" />
	  <PackageReference Include="System.Data.Odbc" Version="8.0.0" />
	  <PackageReference Include="TheTechIdea.Beep.DataManagementEngine" Version="1.0.444" />
	  <PackageReference Include="TheTechIdea.Beep.DataManagementModels" Version="1.0.155" />
	  <PackageReference Include="TheTechIdea.Beep.Vis.Modules" Version="1.0.108" />
	</ItemGroup>
	<ItemGroup>
	  <Folder Include="gfx\" />
	</ItemGroup>

</Project>
