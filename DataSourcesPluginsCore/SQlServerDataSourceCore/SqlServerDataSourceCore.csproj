<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net9.0</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<LangVersion>Latest</LangVersion>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Authors>The Tech Idea</Authors>
		<Company>The Tech Idea</Company>
		<Copyright>2022</Copyright>
		<PackageProjectUrl>https://github.com/The-Tech-Idea/</PackageProjectUrl>
		<PackageIcon>SimpleODM.png</PackageIcon>
		<RepositoryUrl>https://github.com/The-Tech-Idea/</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Title>TheTechIdea.Beep.SqlServerDataSourceCore</Title>
		<PackageId>TheTechIdea.Beep.SqlServerDataSourceCore</PackageId>
		<Version>1.0.1</Version>

	</PropertyGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Copy SourceFiles="$(TargetDir)$(MSBuildProjectName).dll" DestinationFolder="$(ProjectDir)..\..\..\outputDLL\DataSources\$(MSBuildProjectName)\$(TargetFramework)" SkipUnchangedFiles="false" />
	</Target>
	<Target Name="CopyPackage" AfterTargets="Pack">
		<Copy SourceFiles="$(OutputPath)$(PackageId).$(PackageVersion).nupkg" DestinationFolder="..\..\..\..\LocalNugetFiles\DataSources" />
	</Target>
	<ItemGroup>
		<None Include="..\..\..\InstallationScripts\LogoGFx\128\SimpleODM.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
<ItemGroup>
		<Compile Include="..\..\DataSourcesPlugins\SQLServerDataSource\*.cs" />
		<EmbeddedResource Include="..\..\DataSourcesPlugins\SQLServerDataSource\**\*.resx" />
</ItemGroup>
<ItemGroup>
  <Compile Remove="..\..\DataSourcesPlugins\SQLServerDataSource\SQLServerDataSource.cs" />
</ItemGroup>
<ItemGroup>
  <PackageReference Include="System.Data.SqlClient" Version="4.9.0" />
  <PackageReference Include="TheTechIdea.Beep.DataManagementEngine" Version="2.0.35" />
  <PackageReference Include="TheTechIdea.Beep.DataManagementModels" Version="2.0.69" />
  <PackageReference Include="TheTechIdea.Beep.RDBDataSource" Version="2.0.5" />
</ItemGroup>


</Project>
