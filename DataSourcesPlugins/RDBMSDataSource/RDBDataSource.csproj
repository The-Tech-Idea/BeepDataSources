<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFrameworks>netstandard2.0;net6.0;net7.0</TargetFrameworks>
	  <LangVersion>latest</LangVersion>
	  <Nullable>enable</Nullable>
	  <RootNamespace>TheTechIdea.Beep</RootNamespace>
	  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <PackageId>RDBDataSource</PackageId>
	  <Title>RDBDataSource</Title>
	  <Authors>The Tech Idea</Authors>
	  <Company>The Tech Idea</Company>
	  <Product>TheTechIdea.Beep.RDBDataSource</Product>
	  <Description>DataSource Component for Reading Relational Database Sources</Description>
	  <Copyright>2023</Copyright>
	  <PackageProjectUrl>https://github.com/The-Tech-Idea/BeepDM</PackageProjectUrl>
	  <PackageIcon>SimpleODM.png</PackageIcon>
	  <RepositoryUrl>https://github.com/The-Tech-Idea/BeepDM</RepositoryUrl>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <Version>1.0.4</Version>
	 
  </PropertyGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Copy SourceFiles="$(TargetDir)$(PackageId).dll" DestinationFolder="$(ProjectDir)..\..\..\outputDLL\DataSources\$(PackageId)\$(TargetFramework)" SkipUnchangedFiles="false" />
	</Target>
	<Target Name="CopyPackage" AfterTargets="Pack">
		<Copy SourceFiles="$(OutputPath)$(PackageId).$(PackageVersion).nupkg" DestinationFolder="..\..\..\..\LocalNugetFiles\DataSources" />
	</Target>
	<ItemGroup>
		<None Include="..\..\..\InstallationScripts\LogoGFx\128\SimpleODM.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.1.21" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementEngine" Version="1.0.301" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementModels" Version="1.0.99" />
  </ItemGroup>

</Project>
